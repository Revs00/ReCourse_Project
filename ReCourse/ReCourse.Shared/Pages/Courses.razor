            // Panggil service (Interface) yang sudah kita buat
            var result = await CameraService.TakePhotoAsync();

            if (result != null && result.Stream != null)
            {
                uploading = true;
                // PENTING: Reset state InputFile dan Preview saat menggunakan kamera
                selectedFile = null;
                imagePreviewUrl = null;
                StateHasChanged();

                // Gunakan stream dan filename dari result
                using (var streamToUpload = result.Stream)
                {
                    var returnedImagePath = await Api.UploadStreamAsync(streamToUpload, result.FileName);

                    if (returnedImagePath != null)
                    {
                        currentCourse.ThumbnailFileName = returnedImagePath;
                        // <<< SOLUSI UNTUK PREVIEW KAMERA: Atur imagePreviewUrl ke URL server
                        imagePreviewUrl = $"/uploads/{returnedImagePath}?v={DateTime.Now.Ticks}";
                    }
                }
