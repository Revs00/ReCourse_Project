    private async Task OnImageSelected(InputFileChangeEventArgs e)
    {
        var file = e.File;
        if (file == null) return;

        // Reset state
        selectedFile = file;
        imagePreviewUrl = null;

        if (selectedFile.Size > MaxFileSize)
        {
            Console.WriteLine("File terlalu besar!");
            selectedFile = null;
            return;
        }

        // Logic Pratinjau Lokal menggunakan Base64 (AKTIFKAN KEMBALI)
        try
        {
            var format = "image/png";
            var resizedFile = await selectedFile.RequestImageFileAsync(format, 100, 100);
            var buffer = new byte[resizedFile.Size];
            await resizedFile.OpenReadStream().ReadAsync(buffer);
            imagePreviewUrl = $"data:{format};base64,{Convert.ToBase64String(buffer)}"; // <--- Pratinjau Base64 muncul di sini
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error membuat pratinjau: {ex.Message}");
            imagePreviewUrl = null;
        }

        // Panggil Upload hanya jika ada file
        if (selectedFile != null)
        {
            uploading = true;
            StateHasChanged();

            // Panggil metode ApiService yang menerima IBrowserFile
            var returnedImagePath = await Api.UploadCourseImageAsync(selectedFile);

            if (returnedImagePath != null)
            {
                currentCourse.ThumbnailFileName = returnedImagePath;
                // TIDAK PERLU MENGATUR imagePreviewUrl lagi di sini
                // karena gambar akan diperbarui dari /uploads/ setelah Save.
            }

            uploading = false;
        }
        StateHasChanged();
    }

    // 2. Logika untuk Kamera (MediaPicker)
