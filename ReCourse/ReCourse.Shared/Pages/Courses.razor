                uploading = false;
                StateHasChanged();
            }
            else
            {
                Console.WriteLine("Camera cancelled or not supported.");
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Camera error: {ex.Message}");
            uploading = false;
