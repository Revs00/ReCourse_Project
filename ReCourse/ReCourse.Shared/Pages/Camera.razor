@* @page "/camera"
@using ReCourse.MauiHybrid.Services
@inject ICameraService CameraService

<h3>Camera</h3>
<p>@message</p>

<button class="btn btn-primary" @onclick="TakePhoto">Take Photo</button>

@if (!string.IsNullOrEmpty(imageDataUrl))
{
    <div class="mt-3">
        <img src="@imageDataUrl" style="max-width:100%; height:auto;" />
    </div>
}

@code {
    private string message = "Ready to capture photo.";
    private string imageDataUrl;

    private async Task TakePhoto()
    {
        var result = await CameraService.CapturePhotoAsync();
        if (result == null)
        {
            message = "Camera not available or permission denied.";
            return;
        }

        imageDataUrl = result;
        message = "Photo captured.";
    }
} *@
